## Kyuubi Service Control Client Entrance
CLASS="org.apache.hive.beeline.BeeLine"
KYUUBI_DRIVER_CLASS="org.apache.kyuubi.jdbc.KyuubiHiveDriver"

export KYUUBI_HOME="$(cd "$(dirname "$0")"/..; pwd)"

if [[ -z ${JAVA_HOME} ]]; then
  if [[ $(command -v java) ]]; then
    export JAVA_HOME="$(dirname $(dirname $(which java)))"
  fi
fi

if [[ -z ${JAVA_HOME} ]]; then
  echo "Error: JAVA_HOME IS NOT SET! CANNOT PROCEED."
  exit 1
fi

RUNNER="${JAVA_HOME}/bin/java"


## Find the Kyuubi jdbc Jar
if [[ -z "$KYUUBI_JDBC_JAR_DIR" ]]; then
  KYUUBI_JDBC_JAR_DIR="$KYUUBI_HOME/jdbc"
  if [[ ! -d ${KYUUBI_JDBC_JAR_DIR} ]]; then
    export KYUUBI_SCALA_VERSION="${KYUUBI_SCALA_VERSION:-"2.12"}"
    echo -e "\nCandidate Kyuubi jdbc lib $KYUUBI_JDBC_JAR_DIR doesn't exist, searching development environment..."
    KYUUBI_JDBC_JAR_DIR="$KYUUBI_HOME/kyuubi-hive-beeline/target/scala-${KYUUBI_SCALA_VERSION}/jars"
    CLASS="org.apache.hive.beeline.BeeLine"
  fi
fi

KYUUBI_BEELINE_CLASSPATH="${KYUUBI_JDBC_JAR_DIR}/*:"

echo "exec ${RUNNER} ${KYUUBI_JAVA_OPTS} -cp ${KYUUBI_BEELINE_CLASSPATH} $CLASS -d $KYUUBI_DRIVER_CLASS "$@""
exec ${RUNNER} ${KYUUBI_JAVA_OPTS} -cp ${KYUUBI_BEELINE_CLASSPATH} $CLASS -d $KYUUBI_DRIVER_CLASS "$@"
